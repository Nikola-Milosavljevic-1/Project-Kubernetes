{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "no-console": "off",
    "consistent-return": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "import/extensions": "off",
    "linebreak-style": "off",
    "quotes": ["error", "double"],
    "comma-dangle": ["error", "never"]
  }
}
